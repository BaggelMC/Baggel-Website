  <script>
    // Smooth scrolling for anchor links
    document.querySelectorAll<HTMLAnchorElement>('a[href^="#"]').forEach((anchor) => {
      anchor.addEventListener('click', (e: Event) => {
        e.preventDefault();
        const targetId = anchor.getAttribute('href');
        if (targetId === '#') return;
        const target = document.querySelector(targetId || '');
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Highlight active section in sidebar
    const sections = document.querySelectorAll<HTMLElement>('section[id]');
    const sidebarLinks = document.querySelectorAll<HTMLElement>('.sidebar-link');

    function updateActiveSection() {
      const scrollPosition = window.scrollY + 100;

      sections.forEach((section) => {
        const sectionTop = section.offsetTop;
        const sectionHeight = section.offsetHeight;
        const sectionId = section.getAttribute('id');

        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          sidebarLinks.forEach((link) => {
            link.classList.remove('bg-accent', 'text-background', 'font-semibold');
            link.classList.add('text-text');
            if (link.getAttribute('data-section') === sectionId) {
              link.classList.add('bg-accent', 'text-background', 'font-semibold');
              link.classList.remove('text-text');
            }
          });
        }
      });
    }

    window.addEventListener('scroll', updateActiveSection);
    window.addEventListener('load', updateActiveSection);

    function addCopyButtonsToHeadings() {
      const main = document.querySelector('main');
      if (!main) return;

      const headings = main.querySelectorAll<HTMLElement>('h2, h3, h4');
      const usedIds = new Set<string>();
      
      headings.forEach((heading) => {
        if (heading.querySelector('.copy-heading-link')) return;
        
        if (heading.hasAttribute('data-no-copy-link')) return;

        let targetId = heading.id;
        if (!targetId) {
          // Generate an ID from the heading text
          const text = heading.textContent?.trim() || '';
          if (text) {
            const section = heading.closest<HTMLElement>('section[id]');
            const sectionPrefix = section ? `${section.id}-` : '';
            let baseId = (sectionPrefix + text.toLowerCase()
              .replace(/[^a-z0-9]+/g, '-')
              .replace(/^-|-$/g, ''))
              .substring(0, 100);
            
            targetId = baseId;
            let counter = 1;
            while (usedIds.has(targetId) || document.getElementById(targetId)) {
              targetId = `${baseId}-${counter}`;
              counter++;
            }
            
            usedIds.add(targetId);
            heading.id = targetId;
          } else {
            const section = heading.closest<HTMLElement>('section[id]');
            targetId = section?.id || 'heading';
          }
        } else {
          usedIds.add(targetId);
        }

        const button = document.createElement('button');
        button.className = 'copy-heading-link';
        button.setAttribute('aria-label', 'Link zu diesem Abschnitt kopieren');
        button.innerHTML = `
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
          </svg>
        `;

        if (getComputedStyle(heading).position === 'static') {
          heading.style.position = 'relative';
        }

        if (heading.classList.contains('text-center')) {
          button.style.left = 'auto';
          button.style.right = '-32px';
        }

        heading.appendChild(button);

        button.addEventListener('click', async (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          const link = `${window.location.origin}${window.location.pathname}#${targetId}`;
          
          try {
            await navigator.clipboard.writeText(link);
            
            const originalHTML = button.innerHTML;
            button.innerHTML = `
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            `;
            button.classList.add('success');
            
            setTimeout(() => {
              button.innerHTML = originalHTML;
              button.classList.remove('success');
            }, 2000);
          } catch (err) {
            console.error('Failed to copy link:', err);
            button.classList.add('error');
            setTimeout(() => {
              button.classList.remove('error');
            }, 2000);
          }
        });
      });
    }

    window.addEventListener('load', () => {
      addCopyButtonsToHeadings();
    });

    function handleHashFragment() {
      const hash = window.location.hash;
      if (!hash) return;

      const target = document.querySelector(hash);
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        highlightElement(target as HTMLElement);
      }
    }

    function highlightElement(element: HTMLElement) {
      element.classList.add('highlighted-section');
      setTimeout(() => {
        element.classList.remove('highlighted-section');
      }, 3000);
    }

    window.addEventListener('load', () => {
      setTimeout(handleHashFragment, 100);
    });

    window.addEventListener('hashchange', handleHashFragment);

    function initCollapsibleNav() {
      const toggleButton = document.querySelector<HTMLElement>('.nav-toggle-button');
      const navContent = document.querySelector<HTMLElement>('.nav-menu-content');
      const nav = document.querySelector<HTMLElement>('#navigation-menu');
      
      if (!toggleButton || !navContent || !nav) return;

      const isCollapsed = localStorage.getItem('nav-collapsed') === 'true';
      if (isCollapsed) {
        navContent.style.display = 'none';
        toggleButton.setAttribute('aria-expanded', 'false');
        nav.classList.add('collapsed');
      }

      toggleButton.addEventListener('click', () => {
        const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
        
        if (isExpanded) {
          navContent.style.display = 'none';
          toggleButton.setAttribute('aria-expanded', 'false');
          nav.classList.add('collapsed');
          localStorage.setItem('nav-collapsed', 'true');
        } else {
          navContent.style.display = 'block';
          toggleButton.setAttribute('aria-expanded', 'true');
          nav.classList.remove('collapsed');
          localStorage.setItem('nav-collapsed', 'false');
        }
      });
    }

    window.addEventListener('load', initCollapsibleNav);
  </script>

