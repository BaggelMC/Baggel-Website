---
import Headline from "../../../../../../../components/Headline.astro";
import DefaultLayout from "../../../../../../../layouts/DefaultLayout.astro";
import SelectorBar from "../../../../../../../components/SelectorBar.tsx";
import Separator from "../../../../../../../components/Separator.astro";
---

<DefaultLayout title="Admin Docs">

  <div class="max-w-5xl mx-auto px-8 py-20 text-text font-sans">

    <div class="flex justify-end mb-8"> <SelectorBar client:load /> </div>

    <Headline text="Admin Documentation" class="mb-12 text-center" />

    <!-- Category buttons -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6 justify-items-center mb-16">
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/install" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        Install
      </a>
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/claims" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        Claims
      </a>
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/status" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        Status
      </a>
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/spawn-elytra" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        Spawn Elytra
      </a>
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/end-event" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        End Event
      </a>
      <a 
        href="/plugins/en/core/docs/1.1.0/admin/player-heads" 
        class="px-6 py-3 w-full text-center rounded-lg bg-background-50 text-text hover:bg-primary transition-colors duration-base"
      >
        Player Heads
      </a>
    </div>


    <div class="flex justify-center space-x-6 mb-16">
      <div>
        <p>Select a category above to view its documentation.</p>
      </div>
    </div>

    <Separator/>
    

  </div>

</DefaultLayout>
