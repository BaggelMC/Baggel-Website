---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import { getTeamMembers } from "../data/team";

const teamMembers = await getTeamMembers();
---

<DefaultLayout title="Team">
  <section class="py-20 max-w-6xl mx-auto px-4">
    <h1 class="text-primary text-2xl sm:text-3xl md:text-4xl font-bold text-center mb-8 sm:mb-12">Meet the Baggel Team</h1>
    
    <div class="flex flex-wrap justify-center gap-8">
      {teamMembers.map((member, i) => (
        <div class="w-64 relative group">
          <button 
            class="w-full bg-background-10 rounded-xl overflow-hidden shadow transform transition-smooth hover:scale-105 hover:shadow-lg"
            onclick={`toggleInfo(${i})`}
          >

            <img src={member.image} alt={member.name} class="w-full h-48 object-cover" />
            <div class="p-3 text-center">
              <h2 class="text-accent text-lg font-semibold">{member.name}</h2>
              {member.role && <p class="text-text-50 text-sm mt-1">{member.role}</p>}
            </div>
          </button>

          <div id={`info-${i}`} class="hidden absolute z-10 mt-2 w-full bg-background-50 p-3 rounded-lg shadow text-text overflow-hidden">
            <div set:html={member.bio}></div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <script is:inline>
    let openIndex = null;
    function toggleInfo(index) {
      const infoBox = document.getElementById(`info-${index}`);
      if (!infoBox) return;

      if (openIndex !== null && openIndex !== index) {
        const prevBox = document.getElementById(`info-${openIndex}`);
        if (prevBox) prevBox.classList.add("hidden");
      }

      if (infoBox.classList.contains("hidden")) {
        infoBox.classList.remove("hidden");
        openIndex = index;
      } else {
        infoBox.classList.add("hidden");
        openIndex = null;
      }
    }
  </script>
</DefaultLayout>
