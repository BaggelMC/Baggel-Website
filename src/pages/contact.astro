---
import { LINKS } from "../config";
import Headline from "../components/Headline.astro";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout title="Kontakt">

  <div class="max-w-6xl mx-auto px-8 py-20 text-text font-sans">

    <Headline text="Kontakt" class="mb-12 text-center"></Headline>

    <section class="text-base leading-base text-text-50">

      <p class="mb-8">
        Sie können uns über die folgenden Wege erreichen:
      </p>

      <div class="mb-8">
        <p class="font-semibold mb-2">E-Mail</p>
        <p>
          <a href={"mailto:" + LINKS.email} class="text-primary hover:underline">
            {LINKS.email}
          </a>
        </p>
      </div>

      <div class="mb-8">
        <p class="font-semibold mb-2">Telefon</p>
        <p>
          <a href={"tel:" + LINKS.phone} class="text-primary hover:underline">
            {LINKS.phone}
          </a>
        </p>
      </div>

      <div class="mb-8">
        <p class="font-semibold mb-2">Social Media</p>
        <p>
          <a href={LINKS.discord} class="text-primary hover:underline mr-4">Discord</a>
          <a href={LINKS.github} class="text-primary hover:underline">GitHub</a>
        </p>
      </div>

    </section>

  </div>

</DefaultLayout>
