---
import { LINKS } from "../config";

const { lang } = Astro.props;

let github = "";
let modrinth = "";

switch(lang) {
  case "de": {
    github = "Quellcode (GitHub)";
    modrinth = "Alle Versionen (Modrinth)";
    break;
  }
  default: {
    github = "Source Code (GitHub)";
    modrinth = "All Versions (Modrinth)";
    break;
  }
}
---

<h2 class="text-xl text-center leading-xl text-primary mt-12 mb-6 font-minecraft">Download</h2>
<div class="mt-6 flex flex-col sm:flex-row items-center justify-center gap-6">
    <a href={LINKS.core_plugin_download_github} class="px-6 py-3 rounded-2xl bg-primary text-background font-bold transition duration-300 hover:bg-accent hover:scale-105" target="_blank" rel="noopener noreferrer">
      {github}
    </a>
    <a href={LINKS.core_plugin_download_modrinth} class="px-6 py-3 rounded-2xl bg-accent text-background font-bold transition duration-300 hover:bg-primary hover:scale-105" target="_blank" rel="noopener noreferrer">
      {modrinth}
    </a>
</div>